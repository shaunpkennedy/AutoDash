<%= form_tag '/login' do %>

  <div class="container" style="margin-top:30px">

    <div class="col-md-6 col-md-offset-3">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Sign In</h3>
        </div>
        <div class="panel-body">
            <form role="form">
                <fieldset>
                    <div class="form-group">
                        <%= text_field_tag :username, value = nil, class: 'form-control', placeholder: 'Email Address' %>   
                        <% if false %><%= text_field_tag :username, value = nil, class: 'form-control', placeholder: 'Email Address', type: 'email' %><% end %>   
                    </div>
                    <div class="form-group">
                        <%= text_field_tag :password, value = nil, class: 'form-control', placeholder: 'Password', type: 'password' %>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input name="remember" type="checkbox" value="Remember Me">Remember Me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Login</button>
                </fieldset>
            </form>
        </div>
      </div>
    </div>
    
  </div>

<% end %>