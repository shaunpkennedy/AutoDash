
<%= javascript_include_tag "http://github.hubspot.com/odometer/odometer.js" %>

<div class="jumbotron">
  <div class="container">
  
  
      <div class="row">
      
        <div class="col-xs-12 col-sm-5">        
          <div class="auto-info">     
            <h1 class="show-title"><%= @auto.title %></h1>
            <h3>
              <%= @auto.auto_year %> <%= @auto.make %> <%= @auto.model %>                    
            </h3>  
            <div id="odometer" class="odometer"><%= number_with_delimiter(@auto.current_odometer) %></div>
            <p>          
              <%= link_to 'Edit', edit_auto_path(@auto), :class => "btn btn-primary btn-sm active blue", :role => "button" %>      
              <%= link_to 'Delete', @auto, :title => 'Confirm Deletion', :class => "btn btn-danger btn-sm", :role => "button", method: :delete, data: { confirm: 'Are you sure you want to delete this auto? WARNING: This action can not be undone.' } %>
            </p>                     
          </div>
        </div>

        <div class="col-xs-12 col-sm-7"> 
          <div class="row">
            <div class="text-center panel panel-default">
              <div class="panel-body"> 

                <h3 class="stat-title">MPG Stats</h3>
                
                <div class="col-xs-12 col-sm-4">
                  <div class="stat-box panel panel-default">
                    <div class="stat-box-mpg panel-body">
                      <h5 class="stat-box-color-callout"><%= @auto.get_overall_mpg %></h5>
                      <p><span>Avg MPG</span></p>
                    </div>
                  </div>
                </div>
                
                <div class="col-xs-12 col-sm-4">
                  <div class="stat-box panel panel-default">
                    <div class="stat-box-mpg panel-body">
                      <h5 id="stat-box-avg-mpg"><%= @auto.get_most_recent_mpg %></h5>
                      <p><span>Last MPG</span></p>
                    </div>
                  </div>
                </div>
                
                <div class="col-xs-12 col-sm-4">
                  <div class="stat-box panel panel-default">
                    <div class="stat-box-mpg panel-body">
                      <h5 id="stat-box-avg-mpg"><%= number_with_delimiter(@auto.get_miles_logged) %></h5>
                      <p><span>Miles</span></p>
                    </div>
                  </div>
                </div>

              

              </div>
            </div>        
          </div>
        </div>
        
      </div>


      <div class="row">
      
        <div class="col-xs-12 col-sm-5">          
          <h1 class="show-title">Service Reminders</h1>
        </div>

        <div class="col-xs-12 col-sm-7"> 
          <div class="row">
            <div class="text-center panel panel-default">
              <div class="panel-body"> 

                <h3 class="stat-title">Cost Stats</h3>
                
                <div class="row">
                
                  <div class="col-xs-6">
                    <div class="stat-box panel panel-default">
                      <div class="stat-box-cost panel-body">
                        <h5 class="stat-box-color-callout">$<%= @auto.get_cost_per_mile %></h5>
                        <p><span>$/mile</span></p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="col-xs-6">
                    <div class="stat-box panel panel-default">
                      <div class="stat-box-cost panel-body">
                        <h5>$<%= @auto.get_average_cost_per_fill_up %></h5>
                        <p><span>Avg Fill-Up</span></p>
                      </div>
                    </div>
                  </div>
                
                </div>
                
                
                
                
                <div class="row">
                
                  <div class="col-xs-6">
                    <div class="stat-box panel panel-default">
                      <div class="stat-box-cost panel-body">
                        <h5>$<%= @auto.get_average_cost_per_gallon %></h5>
                        <p><span>Avg $/Gallon</span></p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="col-xs-6">
                    <div class="stat-box panel panel-default">
                      <div class="stat-box-cost panel-body">
                        <h5>$<%= @auto.get_fuel_total_cost %></h5>
                        <p><span>Total Spent</span></p>
                      </div>
                    </div>
                  </div>
                
                </div>                
                

              </div>
            </div>        
          </div>
        </div>
        
      </div>
      
      
    </div>
</div>
  
  
  
  
  
  <% if false %> 
    <div class="row">
      <div class="col-md-6">
      
        <h2><strong>Automobile</strong></h2>
        
        <h3><strong>Title:</strong> <%= @auto.title %></h3>
        <h3><strong>User:</strong> <%= h(@auto.user.username) rescue 'No user found' %></h3>      
        <h3><strong>Make:</strong> <%= @auto.make %></h3>        
        <h3><strong>Model:</strong> <%= @auto.model %></h3>
        <h3><strong>Year:</strong> <%= @auto.auto_year %></h3>
        <h3><strong>Odometer:</strong> <%= @auto.current_odometer %></h3>
        <h3><strong>Oil Change Frequency:</strong> <%= @auto.oil_change_frequency %></h3>
        <h3><strong>Tire Rotation Frequency:</strong> <%= @auto.tire_rotation_frequency %></h3>
        <h3><strong>MPG:</strong> <%= @auto.get_overall_mpg %></h3>
        <h3><strong>Last MPG:</strong> <%= @auto.get_most_recent_mpg %></h3>
        <h3><strong>Cost Per Mile:</strong> <%= @auto.get_cost_per_mile %></h3>
        <h3><strong>Miles:</strong> <%= @auto.get_miles_logged %></h3>
        <h3><strong>Total Fuel Cost:</strong> <%= @auto.get_fuel_total_cost %></h3>
        <h3><strong>Total Service Cost:</strong> <%= @auto.get_service_total_cost %></h3>
           
        <p>          
          <%= link_to 'Edit', edit_auto_path(@auto), :class => "btn btn-primary btn-lg active blue", :role => "button" %>      
          <%= link_to 'Delete', @auto, :title => 'Confirm Deletion', :class => "btn btn-danger btn-sm", :role => "button", method: :delete, data: { confirm: 'Are you sure you want to delete this auto? WARNING: This action can not be undone.' } %>
        </p>
        
        <p>
          <%= link_to 'Back', autos_path, :role => "button" %>
        </p>
    </div>
  </div>
</div>
    
  

<article>
  <header>
   <h2>
     <%= @auto.title %>
     [ <%= link_to 'Edit', edit_auto_path(@auto) %> ]
   </h2>
  </header>
  
  <h3>Title:</h3>
  <p><%= @auto.title %></p>
  
  <h3>User:</h3>
