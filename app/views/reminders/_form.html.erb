<div class="jumbotron">
  <div class="container">
    <div class="row">
      <h1>Reminder Modification</h1>
    
      <div class="col-md-6">

      <%= form_for(reminder) do |f| %>
        <% if reminder.errors.any? %>
          <div id="error_explanation">
