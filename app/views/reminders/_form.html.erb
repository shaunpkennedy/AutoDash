          </div>             
          <div class="form-group">
            <%= f.label :miles, 'Miles' %>
            <%= f.text_field :miles, class: 'form-control', placeholder: 'Miles' %> 
          </div>
          <div class="form-group">
            <%= f.label :time, 'Months' %>
            <%= f.text_field :time, class: 'form-control', placeholder: 'Months' %> 
          </div>
          <div class="form-group">
            <%= f.label :notes, 'Notes' %>
            <%= f.text_area :notes, class: 'form-control', placeholder: 'Notes' %> 
          </div>
          <div class="form-group">
            <%= f.label :completed_date, 'Completed Date' %>
            <%= f.date_field :completed_date, class: 'form-control', placeholder: 'Completed Date' %> 
          </div>
          
          <button type="submit" class="btn btn-primary btn-lg">Save</button>

      <% end %>                    
               
