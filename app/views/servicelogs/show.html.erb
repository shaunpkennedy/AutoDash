<article>
 <header>
	<h2>
		<%= @servicelog.log_date %>
		[ <%= link_to 'Edit', edit_servicelog_path(@servicelog) %> ]
	</h2>
 </header>
 
 <p>Auto: <%= h(@servicelog.auto.title) rescue 'No auto found' %></p>
 
