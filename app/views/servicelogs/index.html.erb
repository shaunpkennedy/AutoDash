<p id="notice"><%= notice %></p>
<% if logged_in? %>
 You are logged in as <%= current_user.username %>
<% end %>

<h1>Servicelogs</h1>

<table>
 <thead>
  <tr>
    <th>Auto</th>
    <th>Date</th>
    <th>Odometer</th>
    <th>Total Cost</th>
    <th>Notes</th>
    <th>Last Updated</th>
    <th colspan="2">&nbsp;</th>
  </tr>
 </thead>
 
 <tbody>
  <% @servicelogs.each do |servicelog| %>
    <tr>
      <td><%= servicelog.auto.title rescue "No auto found" %></td>
      <td><%= link_to servicelog.log_date, servicelog %></td>
      <td><%= link_to servicelog.odometer, servicelog %></td>
      <td><%= link_to servicelog.total_cost, servicelog %></td>     
      <td><%= link_to servicelog.notes, servicelog %></td>     
      <td><%= time_ago_in_words(servicelog.updated_at) %> ago</td>
      <td><%= link_to 'Edit', edit_servicelog_path(servicelog) %></td>
      <td><%= button_to 'Destroy', servicelog, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
 </tbody>
</table>

<br>

